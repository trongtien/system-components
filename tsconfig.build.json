{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declarationDir": "./dist",
    "composite": false
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.stories.ts",
    "src/**/*.svelte",
    "src/amp/**",
    "src/setupTests.ts",
    "src/notify.amp.ts"
  ]
}